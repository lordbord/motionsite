<script>
  import * as motion from "@motionone/dom"

  // Animate title
  motion.animate(
    "h1",
    { 
      opacity: [0, 1],
      scale: [0.8, 1],
      filter: ["blur(10px)", "blur(0px)"]
    },
    { 
      duration: 1,
      easing: "ease-out"
    }
  )

  // Animate windows
  motion.animate(
    "main > div",
    { 
      opacity: [0, 1],
      y: [50, 0],
      scale: [0.9, 1],
      filter: ["blur(10px)", "blur(0px)"]
    },
    { 
      delay: motion.stagger(0.2),
      duration: 0.8,
      easing: [.22, .03, .26, 1]
    }
  )

  // Continuous floating animation
  motion.animate(
    "main > div",
    { 
      y: [0, -10, 0]
    },
    { 
      delay: motion.stagger(0.2),
      duration: 4,
      repeat: Infinity,
      easing: "ease-in-out"
    }
  )
</script>
