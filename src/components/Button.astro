---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<button
  class:list={[
    "px-4 py-1 bg-[#AD8CFF] text-white border-2 border-[#FF6AD5]",
    "shadow-[0_0_10px_rgba(255,106,213,0.3)]",
    "hover:bg-[#c2a9ff] hover:shadow-[0_0_15px_rgba(255,106,213,0.5)]",
    "active:translate-y-[1px]",
    "transition-all duration-200",
    "tracking-[0.2em] text-sm",
    className
  ]}
>
  <slot />
</button> 